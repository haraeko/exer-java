<script type="text/javascript">

	//默认情况下取消和保存按钮是隐藏的
	var cancelAndSaveBtnDefault = true;
	
	$(function(){
		$("#remark").focus(function(){
			if(cancelAndSaveBtnDefault){
				//设置remarkDiv的高度为130px
				$("#remarkDiv").css("height","130px");
				//显示
				$("#cancelAndSaveBtn").show("2000");
				cancelAndSaveBtnDefault = false;
			}
		});
		
		$("#cancelBtn").click(function(){
			//显示
			$("#cancelAndSaveBtn").hide();
			//设置remarkDiv的高度为130px
			$("#remarkDiv").css("height","90px");
			cancelAndSaveBtnDefault = true;
		});
		
		$(".remarkDiv").mouseover(function(){
			$(this).children("div").children("div").show();
		});
		
		$(".remarkDiv").mouseout(function(){
			$(this).children("div").children("div").hide();
		});
		
		$(".myHref").mouseover(function(){
			$(this).children("span").css("color","red");
		});
		
		$(".myHref").mouseout(function(){
			$(this).children("span").css("color","#E6E6E6");
		});

		$("#bindActivityBtn").click(function(){
			//初始化工作
			//清空搜索框
			$("#searchActivityText").val("")
			//清空列表
			$("#tBody").html("")
			//弹出模态窗口
			$("#bindModal").modal("show")
		})

	//	给输入框添加键盘弹起事件
		$("#searchActivityText").keyup(function (){
			// var activityName=$("#searchActivityText").val()
			var activityName = this.value
			//从作用域中取值，加上引号变成字符串
			var clueId = '${clue.id}'

			$.ajax({
				url:'workbench/clue/queryActivityForClueByNameClueId.do',
				data:{
					activityName:activityName,
					clueId:clueId
				},
				type:'post',
				dataType:'json',
				success:function (data){
				//	遍历活动数组

				// 	js 中遍历
				//	变量的声明一般都放在循环外
					var	htmlStr=""
					$.each(data,function (index,ac){

						htmlStr+="<tr>"
						//给勾选框添加和activity的相同id
						htmlStr+="<td><input type=\"checkbox\" value=\""  +ac.id +   "\"></td>"
						htmlStr+="<td>"  +ac.name+   "</td>"
						htmlStr+="<td>"  +ac.startDate+  "</td>"
						htmlStr+="<td>"  +ac.endDate +  "</td>"
						htmlStr+="<td>"  +ac.owner +  "</td>"
						htmlStr+="</tr>"
					})
					//		覆盖追加
					$("#tBody").html(htmlStr)
				}
			})
		})
		//给关联按钮添加单击事件
		$("#saveBindBtn").click(function (){
		//	收集参数
		//	获取被选中的id
			var checkIds=$("#tBody input[type='checkbox']:checked")
		//	表单验证
