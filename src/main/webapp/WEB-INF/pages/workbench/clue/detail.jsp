				type: 'post',
				dataType: 'json',
				success:function (data){
					if (data.code=='1'){
						$("#bindModal").modal("hide")
						//		刷新关联的活动列表
<%--						<c:forEach items="${activityList}" var="a">--%>
						var htmlStr=""
						$.each(data.retData,function (index,obj){
							htmlStr+="<tr id=\"tr_\""    +obj.id+   "\">"
							htmlStr+="<td>"+ 	obj.name   	+"</td>"
							htmlStr+="<td>"+ 	obj.startDate	+"</td>"
							htmlStr+="<td>"+ 	obj.endDate		+"</td>"
							htmlStr+="<td>"+ 	obj.owner		+"</td>"
							//id是我自定义的
							htmlStr+="<td><a href=\"javascript:void(0);\" id=\""   +obj.id+   "\" style=\"text-decoration: none;\"><span class=\"glyphicon glyphicon-remove\"></span>解除关联</a></td>"
							htmlStr+="</tr>"
						})
						<%--					</c:forEach>--%>
						$("#relationAct").append(htmlStr)
					}
				else{
					alert(data.message)
